
<div class="container-new">
  <div class="form">
<h3> Add a Cocktail</h3>
<%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :name%>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "btn-primary btn-block" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary btn-block" %>
<% end %>
</div>
</div>
