<div class="container">
<h2><%= @cocktail.name %></h2>

<ul><% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> |
  <%= dose.description %>
  <%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill%>
  <%= link_to 'Delete', dose_path(dose), method: :delete, data: {confirm: 'Are you sure to delete this dose?'} %>
  </li>
<% end %>
</ul>


